name: Docker Build and Push (Simple)

# Workflow simplificado: SOLO build y push Docker
# Sin tests, sin validaciones, solo construir y subir imagen

on:
  # Trigger manual
  workflow_dispatch:
    inputs:
      tag:
        description: 'Tag para la imagen (ej: v1.0.1, latest, dev)'
        required: false
        default: 'latest'

  # Trigger automÃ¡tico en push a main (opcional, comentar si no quieres)
  push:
    branches: [ main ]

env:
  REGISTRY: ghcr.io

jobs:
  docker-build-push:
    name: Build and Push
    runs-on: ubuntu-latest

    permissions:
      contents: read
      packages: write
      attestations: write
      id-token: write

    steps:
      - name: Checkout cÃ³digo
        uses: actions/checkout@v4

      - name: Setup Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Login a GHCR
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Determinar tag
        id: tag
        run: |
          if [ "${{ github.event_name }}" == "workflow_dispatch" ]; then
            TAG="${{ inputs.tag }}"
          else
            TAG="main-$(git rev-parse --short HEAD)"
          fi
          echo "tag=$TAG" >> $GITHUB_OUTPUT
          echo "ğŸ“Œ Tag a usar: $TAG"

      - name: Build and Push
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          platforms: linux/amd64,linux/arm64
          tags: |
            ${{ env.REGISTRY }}/edugogroup/edugo-worker:${{ steps.tag.outputs.tag }}
            ${{ env.REGISTRY }}/edugogroup/edugo-worker:latest
          cache-from: type=gha
          cache-to: type=gha,mode=max
          build-args: |
            GITHUB_TOKEN=${{ secrets.GITHUB_TOKEN }}

      - name: Resultado
        run: |
          echo "âœ… Imagen construida y pusheada exitosamente"
          echo ""
          echo "ğŸ“¦ Imagen disponible en:"
          echo "  ghcr.io/edugogroup/edugo-worker:${{ steps.tag.outputs.tag }}"
          echo "  ghcr.io/edugogroup/edugo-worker:latest"
          echo ""
          echo "ğŸ” Ver en: https://github.com/orgs/EduGoGroup/packages/container/edugo-worker"
